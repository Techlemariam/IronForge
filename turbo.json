{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "dependsOn": [
                "^build"
            ]
        },
        "test": {
            "dependsOn": [],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts"
            ]
        },
        "lint": {
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                ".eslintrc.json"
            ]
        },
        "check-types": {
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "tsconfig.json"
            ]
        },
        "security": {
            "inputs": [
                "package.json",
                "pnpm-lock.yaml"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}